/*
Jeet uses floats for it's grid system. To get the layout and reflow
for this page as specified in the design, I've had to use inline-block
*/

color-swatch-group
	display block
	text-align center
		
color-swatch
	text-align center
	border 1px solid lightGrey
	border-radius 5px
	display block
	background-color white
	display inline-block

	+from-width(small)		
		width 18%
		margin-right 2%
		margin-top 2%
		&:nth-child(n+5)
			margin-right 0%
			
	+below(small)		
		width 48%
		margin-right 2%
		margin-top 2%
		&:nth-child(even)
			margin-right 0%
			
	&:before
		content ''
		display block
		margin 5%
		width 90%
		padding-bottom 90%
	// see colors.styl for colorHash definition
	for key, value in colorHash
		&.{key}:before
			background-color value

	color-swatch-name
		@extend p
		display block
		line-height 0px
		padding-top 20px
		padding-bottom 10px
		border-top lightGrey 1px solid
		
	color-swatch-hex
		display block
		@extend p.alternate
		margin 0 0 10px 0
		text-transform uppdercase
		

tag-example
	text-align center
	h1, h2, h3, h4, p 
		display inline-block
		margin-bottom 0

grid-row
	edit()
	margin-bottom 25px
	
div.grid-block
	@extend p
	line-height 70px
	
	&.halves
		col(1/2)
		
	&.thirds
		col(1/3)
		
	&.quarters
		col(1/4)
		
	&.eighths
		col(1/8)