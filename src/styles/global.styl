	font-family 'MandS London W01 Regular';
	font-size 15px
	color darkgrey
	font-smoothing
	line-height 22px
	text-shadow: 1px 1px 1px rgba(0,0,0,0.004);
	text-rendering: optimizeLegibility !important;
	font-smoothing: antialiased !important;

p.alternate
	color darkgrey
	font-size 13px
	line-height 20px
	
a 
	border-bottom 1px solid black
	text-decoration none
	color black
	

attribute-list
	display block
	color lightgrey
	cf()
	
	> ul
		margin 0 0 20px 0
		padding 0
		list-style none
		col(1/6, cycle: 6)
			
		+below(medium)
			stack()
		
		> li
			margin 0 0 4px 0
			padding 0
			text-align left
			font-size 13px