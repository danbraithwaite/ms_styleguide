element-example-layout()
		
// -----------------------------------------------------		
// button stuff
// -----------------------------------------------------

button($color)
	display inline-block
	position relative
	border none
	color darkgrey
	margin 0
	padding 0 20px
	background-color $color
	line-height 40px
	user-select none
	cursor pointer
	
	&.full-width
		width 100%
	
	&.hover-state
	&:hover
		background-color primaryCtaHoverColor
		
	&.active-state
	&:active
		background-color primaryCtaPressColor
		
	&:disabled
		background-color backgroundgrey
		color mediumgrey
		cursor no-drop
		
	&[data-role=secondary]
		background-color secondaryCtaBgColor
		
		&.hover-state
		&:hover
			background-color lightgrey
			
		&.active-state
		&:active
			background-color mediumgrey
			
		&:disabled
			color lightgrey
			background-color backgroundgrey
			cursor no-drop
		
	&[data-role=tertiary]
		background-color white
		border 1px solid darkgrey
		
		&.hover-state
		&:hover
			background-color secondaryCtaBgColor
			
		&.active-state
		&:active
			background-color lightgrey
			border-color transparent
			
		&:disabled
			color lightgrey
			background-color backgroundgrey
			cursor no-drop
			
	&[data-role=checkout-button]
		line-height 48px
		font-size 18px

button
input[type=submit]
	button(green)
	
icon-button
	button(white)
	border 1px solid lightgrey
	padding-left 45px
	
	&:before
		@extend .icon
		sprite($gift-small)
		position absolute
		display block
		content ''
		top 10px
		left 18px
		
// -----------------------------------------------------		
// Tabs
// Using radios instead of buttons
// -----------------------------------------------------

tab-button-group
	display block
	border 1px solid lightgrey
	line-height 40px
	width 70%
	
	
	> label
		display inline-block
		margin 0
		padding 0 20px
		width 50%
		text-align center
		
		> input
			display none
			
$link-button
	font-size 0
	@extend .icon
	display inline-block
	text-decoration none
	border none
	
a[data-role=app-store-link]
	@extend $link-button
	sprite($apple-app-store)
	
a[data-role=google-play-link]
	@extend $link-button
	sprite($google-play)
	
