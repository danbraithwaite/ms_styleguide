
$hero-promo
	center()
	text-align left
	position relative
	margin 2% auto 30px
	
	promo-image-placeholder
		display block
		position absolute
		top 0
		left 0
		right 0
		padding-bottom 35.15%
		height 35.15%
		background-size cover
		
		+below(682px)
			padding-bottom 65%
		
	promo-copy
		h1
			text-transform none
			color #fff

		p 
			font-family arial
			color #fff	
			
		promo-cta
			display block
			ul 
				inline-list true
				li 
					margin-right 10px
					margin-bottom 10px
		
		&:nth-child(even)
			display block
			position relative
			width 100%
			top 0
			left 0
			padding-top 35.15%
			padding-left 10px
			padding-right 10px
			
			a 
				display inline-block
				padding-bottom 10px
				border none
				

			h1, p,  promo-cta
				display none
				color darkgrey
				
			+below(910px)
		
				p
					display block
					border-bottom 1px solid mediumgrey
					padding-bottom 10px
					
			+below(750px)
				h1
					display block
					margin 2% 0
					font-size 40px
					
			+below(682px)
				padding-top 65%
				promo-cta
					display block
					border-bottom 1px solid mediumgrey
				
				h1
					font-size 28px
					line-height 28px

		&:nth-child(odd)
			position absolute
			top 0
			bottom 0
			width 40%

			h1
				text-transform none
				color #fff
				
				+below(1130px)
					margin-top 100px
					font-size 40px
					line-height 40px
					
				+below(910px)
					margin-top 20%
					
				+below(750px)
					display none
			p 
				color #fff
				+below(910px)
					display none
					
			promo-cta
				+below(750px)
					margin-top 40%
					
				+below(682px)
					display none

	nav[data-role=prev-next]
		position absolute
		top 0
		left 0
		right 0
		
		a
			position absolute
			font-size 0
			top 205px
			display bloc
			border none
			border black
			@extend .icon

			
			&:nth-child(even)
				sprite($arrow-left)
				
				left 10px

			&:nth-child(odd)
				right 0
				
	nav[data-role=pagination]
		position absolute
		bottom 10px
		left 0
		right 0	
		text-align center
		letter-spacing 10px
		
		+below(910px)
			margin 10px auto
			position relative

		a
			font-size 0
			width 20px
			height 10px
			display inline-block
			background-color white	
			border none	
			
			&:nth-child(even)
				background-color black
			
			&:nth-child(odd)
				+below(910px)
					background-color lightgrey
				

						
					
// ---------------------------------------------------------

hero-promo-right
		@extend $hero-promo		
		promo-copy
			left 55%
		
hero-promo-left
	@extend $hero-promo
	promo-copy
		left 5%
		
department-hero-promo-left
department-hero-promo-right	
	@extend $hero-promo
	center(960px)
	
department-hero-promo-left > promo-copy
	left 5%
	

