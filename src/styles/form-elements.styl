// -----------------------------------------------------
// Page Setup
// -----------------------------------------------------
			
element-example-layout()


// -----------------------------------------------------
// Form stuff
// -----------------------------------------------------

input[type=text]
input[type=email]
input[type=password]
input[type=checkbox]
textarea
select
	border-radius 0
	border 1px solid black
	background-color backgroundgrey
	line-height 43px
	padding 0
	text-indent 10px
	font-size 15px
	
	&:focus
	&.forced-focus
	&[data-state='focused']
		border 1px solid darkgrey
		background-color white
		
	element-example &
		width 80%

input-note
	display block
	padding 10px 0 0
	color mediumgrey
	font-size 13px
	text-align right

input-error
	display none

form 
	margin 20px 0 0

	label
		display block
		margin 0 0 30px
		
		input
		select
			display block
			margin 10px 0 0
			width 100%
		select 
			width 60%
	
// Inputs should be wrapped in a label tag

label
	user-select none

label.error
label[data-state=error]
	position relative
	
	input[type=text]
	input[type=email]
	input[type=password]
	input[type=checkbox]
	textarea
	select
		border 1px solid errorRed
		background-color #ffffff
		color errorRed

	input-error
		display block
		position absolute
		padding 12px 12px 11px
		color errorRed
		background errorPink
		border 1px solid errorRed
		top -60px
		font-size 13px
		right 0
		left 0
		
		&:after
		&:before
			top 100%
			left 10%
			border solid transparent
			content ''
			height 0
			width 0
			position absolute
			pointer-events none
		

		&:after
			border-color rgba(213, 151, 151, 0)
			border-top-color errorPink
			border-width 4px
			margin-left -4px
			
		&:before
			border-color rgba(245, 0, 0, 0)
			border-top-color #f50000
			border-width 5px
			margin-left -5px
			
// ----------------------------------------------------------------------		
// Text area
// ----------------------------------------------------------------------
		
textarea
	min-height 114px

// ----------------------------------------------------------------------		
// Select
// ----------------------------------------------------------------------

select
	// In  prod you'll need a more robust styled select
	appearance none
	border-radius 0
	background-repeat no-repeat
	background-position right 10px center
	background-image url('/images/arrow-select.png')
	
	+retina()
		background-image url('/images/arrow-select@2x.png')
		background-size 12px

// ----------------------------------------------------------------------		
// Checkboxes
// ----------------------------------------------------------------------

checkbox-group
	label
		position relative
		width 100%
		display block
		margin-bottom 14px
		
radio-group
	@extend checkbox-group

input[type=checkbox]
input[type=radio]
	display none
	
label > input[type=checkbox] + span
label > input[type=radio] + span
	padding-left 30px
	font-size 15px
	display block
	
	&:before
	&:after
		position absolute
		display block
		content ''
		
	&:before
		top -2px
		left 0
		width 16px
		height 16px
		border 1px solid black
		

label > input[type=checkbox] + span	
	&:after
		@extend .icon
		sprite($check)
		display none
		top 3px
		left 5px
		
label > input[type=radio] + span
	&:before
		border-radius 10px

	&:after
		display none
		border-radius 10px
		background-color darkgrey
		width 10px
		height 10px
		top 2px
		left 4px
	
label > input[type=checkbox]:checked + span
label > input[type=radio]:checked + span
	&:before
		border-color darkgrey

	&:after
		display block
		
label > input[type=checkbox]:disabled + span
label > input[type=radio]:disabled + span
	opacity 0.25
	
	&:before
		border-color black
		
// ----------------------------------------------------------------------		
// Input button group
// ----------------------------------------------------------------------

input-button-group
	input[type=text]
		width 77%
		
	input[type=submit]
		width 20%
		border mediumgrey
		height 45px
		border none
		float right
		padding 0
		truncate-text()
		
// ----------------------------------------------------------------------		
// Range selector
// ----------------------------------------------------------------------
range-selector
	select
		width 35%
		max-width 80px
		&:nth-child(odd)
			margin-right 10px
			
		&:nth-child(even)
			margin-left 10px
			


// ----------------------------------------------------------------------		
// Accordian
// ----------------------------------------------------------------------

accordian-container
	display block
	width 100%
	
	> * 
		display block

	accordian-group
		border 1px solid darkgrey
		border-width 1px 0 0
		position relative
		
		&:last-child
			border-width 1px 0 1px
		
		
		accordian-header
			display block
			width 100%
			padding 10px 10px 10px 60px
			truncate-text()
			
			&:before
				content ''
				display block
				@extend .icon
				sprite($arrow-down-small)
				transform rotate(-90deg)
				transition transform .25s ease-out
				
				position absolute
				left 30px
				top 14px
				
		accordian-content > p
			padding-left 30px
			margin-bottom 10px
			truncate-text()
			
			&:first-child
				margin-top 20px
			
			&:last-child
				margin-bottom 20px
			
	accordian-group[data-state='open']
		header
			margin-bottom 10px
			border-bottom 1px solid lightgrey
			
			&:before
				transform none
			

		


















