
promo-banner
	center(pad: 10px)
	margin 50px 32px
	display block
	border 1px solid red
	
	> p
		color red
		font-size 18px
		
promo-hero
	display block
	center()
	background #000
	padding-bottom 35.15%
	background-size cover
	background-image url(/images/promo-1.jpg)
	position relative
	
	> div
		position absolute
		top 0
		right 0
		bottom 0
		left 0
	
	promo-copy
		col(1/2)
		shift(1/2)
		color white
		text-align left
		margin-top 5%
		
		promo-heading
			@extend h1
			padding 0 10% 0 5%
			display block
			margin 0 0 5% 0
			text-transform none

		promo-text
			@extend p
			padding 0 20% 0 5%
			display block
			margin 0
			color white
			
		ul 
			inline-list true
			margin-top 10px
			li 
				margin-right 10px
	
	