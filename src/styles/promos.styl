hero-promo-right
	@extend $hero-promo
	promo-image-placeholder
		background-image url(/images/promo-1.jpg)
		+below(682)
			background-position center left
	
	promo-copy
		left 55%
	
hero-promo-left
	@extend $hero-promo
	promo-image-placeholder
		background-image url(/images/promo-2.jpg)
		+below(682)
			background-position center right	
		
	promo-copy
		left 5%
	