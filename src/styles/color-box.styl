/*
Jeet uses floats for it's grid system. To get the layout and reflow
for this page as specified in the design, I've had to use inline-block
*/

color-box-row
	display block
	text-align center
	center(large)
	+below(large)
		center(medium)
	+below(medium)
		center(90%)
	+below(small)
		center(90%)

color-box
	text-align center
	border 1px solid lightGrey
	border-radius 5px
	display block
	background-color white
	display inline-block

	+from-width(small)		
		width 18%
		margin-right 2%
		margin-bottom 2%
		&:nth-child(n+5)
			margin-right 0%
			
	+below(small)		
		width 48%
		margin-right 2%
		margin-bottom 2%
		&:nth-child(even)
			margin-right 0%
			
	&:before
		content ''
		display block
		margin 5%
		width 90%
		padding-bottom 90%
	// see colors.styl for colorHash definition
	for key, value in colorHash
		&.{key}:before
			background-color value

	color-box-name
		@extend p
		display block
		line-height 0px
		padding-top 20px
		padding-bottom 10px
		border-top lightGrey 1px solid
		
	color-box-hex
		display block
		@extend p.alternate
		margin 0 0 10px 0
		text-transform uppdercase