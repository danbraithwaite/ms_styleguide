{{#items}}
$hd-{{name}} = {{px.offset_x}} {{px.offset_y}} {{px.width}} {{px.height}}
{{/items}}

{{#sprite}}
+density(retina)
    {{class}}
        background-image url('{{{escaped_image}}}')
        transform scale(0.5)
{{/sprite}}

    {{#items}}
    .icon-swatch.{{name}}
        @extend .icon
        sprite($hd-{{name}})
        center-hd-sprite($hd-{{name}})
    {{/items}}

